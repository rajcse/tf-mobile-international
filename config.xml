<?xml version='1.0' encoding='utf-8'?>
<widget id="com.truthfinder.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TruthFinder</name>
    <description>
        TruthFinder Dashboard Application
    </description>
    <author email="support@truthfinder.com" href="http://www.truthfinder.com">
        TruthFinder Team
    </author>
    <content src="http://localhost:3000/index.html"/>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-app-version" source="npm" spec="~0.1.9" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <gap:plugin name="com.phonegap.plugins.facebookconnect" version="2.8">
        <param name="APP_ID" value="109396249535582" />
        <param name="APP_NAME" value="TruthFinder" />
    </gap:plugin>
    <icon src="www/img/icon.png" />
    <platform name="android">
        <icon density="ldpi" src="www/img/system/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/img/system/icon/android/drawable-hdpi-icon.png" />
        <icon density="hdpi" src="www/img/system/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/img/system/icon/android/drawable-hdpi-icon.png" />
        <icon density="xxhdpi" src="www/img/system/icon/android/drawable-hdpi-icon.png" />
        <icon density="xxxhdpi" src="www/img/system/icon/android/drawable-hdpi-icon.png" />
        <splash density="port-ldpi" src="www/img/system/screen/android/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="www/img/system/screen/android/drawable-port-hdpi-screen.png" />
        <splash density="port-hdpi" src="www/img/system/screen/android/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="www/img/system/screen/android/drawable-port-hdpi-screen.png" />
        <splash density="port-xxhdpi" src="www/img/system/screen/android/drawable-port-hdpi-screen.png" />
        <splash density="port-xxxhdpi" src="www/img/system/screen/android/drawable-port-hdpi-screen.png" />
    </platform>
    <platform name="ios">
        <icon height="57" platform="ios" src="www/img/system/icon/ios/icon.png" width="57" />
        <icon height="114" platform="ios" src="www/img/system/icon/ios/icon@2x.png" width="114" />
        <icon height="40" platform="ios" src="www/img/system/icon/ios/icon-40.png" width="40" />
        <icon height="80" platform="ios" src="www/img/system/icon/ios/icon-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="www/img/system/icon/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="www/img/system/icon/ios/icon-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="www/img/system/icon/ios/icon-60.png" width="60" />
        <icon height="120" platform="ios" src="www/img/system/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="www/img/system/icon/ios/icon-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="www/img/system/icon/ios/icon-72.png" width="72" />
        <icon height="144" platform="ios" src="www/img/system/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="www/img/system/icon/ios/icon-76.png" width="76" />
        <icon height="152" platform="ios" src="www/img/system/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="www/img/system/icon/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="www/img/system/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="www/img/system/icon/ios/icon-small@3x.png" width="87" />
        <splash height="1136" platform="ios" src="www/img/system/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="www/img/system/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" platform="ios" src="www/img/system/screen/ios/Default-736h.png" width="1242" />
        <splash height="2048" platform="ios" src="www/img/system/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" platform="ios" src="www/img/system/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="960" platform="ios" src="www/img/system/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="480" platform="ios" src="www/img/system/screen/ios/Default~iphone.png" width="320" />
    </platform>
    <platform name="browser">
        <preference name="ShowSplashScreen" value="false" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.1.1" />
</widget>
